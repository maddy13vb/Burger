<div class="container">
    <div class="row">
        <div class="center col-md-12">
            <h1>Eat-Da-Burger</h1>
            <p>Who's hungry!</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Burger Options:</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}

                    <form action="/api/burgers/{{this.id}}" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour!!!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Devoured Burgers:</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>

    </div>

    <div class="row">
        <div class="center col-md-12">
            <h2>Add another Burger:</h2>
            <form class="create-form" action="/" method="POST">

                <div class="form-group">
                    <p>Order another burger here!</p>
                    <input type="text" id="ca" name="burger_name">
                </div>

                <button class="btn-warning" type="submit" id="create-form">Burger Please!</button>
            </form>
        </div>
    </div>
</div>